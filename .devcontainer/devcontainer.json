{
  "name": "Tic-Tac-Toe iOS Development",
  "image": "mcr.microsoft.com/devcontainers/swift:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang",
        "vknabel.vscode-swift-development-environment",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "wayou.vscode-todo-highlight"
      ],
      
      "settings": {
        "swift.path": "/usr/bin/swift",
        "swift.buildPath": "${workspaceFolder}/.build",
        "swift.autoGenerateLaunchConfigurations": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [120],
        "files.exclude": {
          "**/.build": true,
          "**/DerivedData": true,
          "**/.DS_Store": true,
          "**/xcuserdata": true
        },
        "files.watcherExclude": {
          "**/.build/**": true,
          "**/DerivedData/**": true
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "search.exclude": {
          "**/.build": true,
          "**/DerivedData": true,
          "**/Pods": true,
          "**/*.xcodeproj": true,
          "**/*.xcworkspace": true
        },
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "github.copilot.enable": {
          "*": true,
          "swift": true,
          "markdown": true
        }
      }
    }
  },
  
  "forwardPorts": [],
  
  "postCreateCommand": "swift --version && echo 'Development container ready!'",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.build,target=${containerWorkspaceFolder}/.build,type=bind,consistency=cached"
  ],
  
  "containerEnv": {
    "WORKSPACE": "${containerWorkspaceFolder}"
  }
}
